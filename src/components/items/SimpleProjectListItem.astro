---
import type { Project } from "../../pages/index.astro";

interface Props {
  project: Project;
}

const { project } = Astro.props;
const url =
  (!!project.website_url ? project.website_url : project.github_url) ?? "";
---

<div class="space-y-1">
  <a href={url} class="text-lg font-semibold no-underline">{project.name}</a>
  <p class="text-[1rem] text-body-lighter leading-7 tracking-normal">
    {project.description}
  </p>
</div>
